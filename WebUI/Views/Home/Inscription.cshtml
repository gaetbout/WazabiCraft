@model WebUI.ServiceReferenceJoueur.JoueurClient

@{
    ViewBag.Title = "Inscription";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
    HtmlHelper.ClientValidationEnabled = false;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
}
<div class="container">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        @using (Html.BeginForm("Inscription", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            <h2 class="form-signin-heading">@ViewBag.Title</h2>
            <div class="form-group">
                @Html.TextBoxFor(modelItem => modelItem.Pseudo, null, new { @class = "form-control input-lg", tabindex = "1", placeholder = Html.DisplayNameFor(model => model.Pseudo) })
            </div>
            <div class="form-group">
                @Html.PasswordFor(modelItem => modelItem.Mdp, new { @class = "form-control input-lg", tabindex = "2", placeholder = Html.DisplayNameFor(model => model.Mdp) })
            </div>
            <div class="form-group">
                @Html.PasswordFor(modelItem => modelItem.ConfirmPassword, new { @class = "form-control input-lg", tabindex = "3", placeholder = Html.DisplayNameFor(model => model.ConfirmPassword) })
            </div>

            <input type="submit" value="S'inscrire" class="btn btn-lg btn-primary btn-block btnsc" />
        }
    </div>
</div>